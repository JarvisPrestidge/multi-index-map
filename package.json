{
    "name": "n-index-map",
    "version": "0.0.1",
    "description": "Multi index map implementation in TypeScript",
    "license": "MIT",
    "author": "Jarvis Prestidge <jarvisprestidge@gmail.com>",
    "main": "./dist/index.cjs",
    "types": "./dist/index.d.ts",
    "module": "./dist/index.modern.js",
    "umd:main": "./dist/index.umd.js",
    "exports": {
        "require": "./dist/index.cjs",
        "default": "./dist/index.modern.js"
    },
    "repository": {
        "url": "git@github.com:JarvisPrestidge/n-index-map.git"
    },
    "publishConfig": {
        "access": "public"
    },
    "keywords": [
        "n-key-map",
        "n-index-map",
        "multi-key-map",
        "multi-index-map",
        "n",
        "multi",
        "key",
        "index",
        "map"
    ],
    "files": [
        "dist",
        "package.json",
        "yarn.lock"
    ],
    "scripts": {
        "clean": "rimraf dist",
        "format": "prettier --write 'src/**/*.{ts,tsx}'",
        "lint": "eslint --ext .js,.ts src/",
        "lint:fix": "eslint --ext .js,.ts --fix src/",
        "start": "node dist/index.js",
        "test": "jest --coverage",
        "test:ci": "jest --runInBand --ci --coverage",
        "test:watch": "jest --coverage --watch",
        "build:prod": "microbundle --format modern,cjs,umd",
        "build": "yarn clean && yarn build:prod",
        "release": "yarn build && yarn changeset publish",
        "run-example": "ts-node examples/example.ts"
    },
    "devDependencies": {
        "@changesets/cli": "^2.22.0",
        "@types/jest": "^27.5.1",
        "@types/node": "^17.0.34",
        "@typescript-eslint/eslint-plugin": "^5.25.0",
        "@typescript-eslint/parser": "^5.25.0",
        "eslint": "^8.15.0",
        "eslint-config-prettier": "^8.5.0",
        "jest": "^28.1.0",
        "jest-ts-auto-mock": "^2.1.0",
        "microbundle": "^0.15.0",
        "prettier": "^2.6.2",
        "rimraf": "^3.0.2",
        "ts-auto-mock": "^3.6.2",
        "ts-jest": "^28.0.2",
        "ttypescript": "^1.5.13",
        "typescript": "^4.6.4"
    },
    "jest": {
        "setupFiles": [
            "<rootDir>/test/config.ts"
        ],
        "transform": {
            ".(ts|tsx)": "ts-jest"
        },
        "testMatch": [
            "**/?(*.)+(spec|test).ts?(x)"
        ],
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "json"
        ],
        "globals": {
            "ts-jest": {
                "compiler": "ttypescript"
            }
        }
    }
}
